<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/tvNameItemShimmer"
        style="@style/TextViewReguler.OpenSans_18sp_020202"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:background="@drawable/shape_shimmer_rounded_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUomShimmer"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_shimmer_rounded_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItemShimmer" />


    <TextView
        android:id="@+id/tvItemPriceShimmer"
        style="@style/TextViewSemiBold.OpenSans_16sp_020202"
        android:layout_width="90dp"
        android:layout_height="16dp"
        android:background="@drawable/shape_shimmer_rounded_50"
        android:gravity="end"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tvNameItemShimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNameItemShimmer" />

    <TextView
        android:id="@+id/tvQtyShimmer"
        style="@style/TextViewSemiBold.OpenSans_15sp_020202"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:background="@drawable/shape_shimmer_rounded_50"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvUomShimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvUomShimmer" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_shimmer_rounded_20"
        app:layout_constraintTop_toBottomOf="@+id/tvUomShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>