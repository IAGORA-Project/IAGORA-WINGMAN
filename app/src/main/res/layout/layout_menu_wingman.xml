<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPesanan"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/redPrimary"
        app:strokeWidth="1dp"
        app:icon="@drawable/ic_shopping_bag"
        app:iconTint="@color/black"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pesanan"
        android:theme="@style/TextViewSemiBold.OpenSans_15sp_020202"
        app:layout_constraintEnd_toEndOf="@+id/btnPesanan"
        app:layout_constraintStart_toStartOf="@+id/btnPesanan"
        app:layout_constraintTop_toBottomOf="@+id/btnPesanan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPasar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_merchant"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/redPrimary"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/tvPasar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pasar"
        android:theme="@style/TextViewSemiBold.OpenSans_15sp_020202"
        app:layout_constraintEnd_toEndOf="@+id/btnPasar"
        app:layout_constraintStart_toStartOf="@+id/btnPasar"
        app:layout_constraintTop_toBottomOf="@+id/btnPasar" />

</androidx.constraintlayout.widget.ConstraintLayout>