<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabOnProcess"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:animateLayoutChanges="true"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@drawable/bg_tab"
        app:tabGravity="start"
        app:tabIndicatorColor="@color/transparent_600"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/colorTextSelected"
        app:tabTextAppearance="@style/TextViewReguler.OpenSans_14sp_020202"
        app:tabTextColor="@color/colorText" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpOnProcess"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabOnProcess" />

</androidx.constraintlayout.widget.ConstraintLayout>