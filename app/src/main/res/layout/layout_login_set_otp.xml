<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_set_title"
        android:textAppearance="@style/TextViewSemiBold.OpenSans_18sp_020202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextViewReguler.OpenSans_16sp_020202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="@string/otp_set_desc" />


    <com.mukesh.OtpView
        android:id="@+id/otpView"
        android:layout_marginTop="30dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:cursorVisible="false"
        android:focusableInTouchMode="true"
        android:inputType="numberPassword"
        android:itemBackground="@drawable/shape_shimmer_circle"
        android:textColor="@color/redPrimary"
        android:textAppearance="@style/TextViewSemiBold.OpenSans_16sp_020202"
        app:itemHeight="16dp"
        app:itemCount="6"
        app:itemWidth="16dp"
        app:lineColor="@color/transparent"
        app:viewType="line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDesc" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDescStateOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_red_rounded_10"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpView"
        tools:text="@string/desc_state_otp" />


</androidx.constraintlayout.widget.ConstraintLayout>