<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.iagora.wingman.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <queries>

        <!-- Explicit apps you know in advance about: -->
        <package android:name="com.whatsapp" />
    </queries>

    <application
        android:name="com.iagora.wingman.app.WingmanApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:theme="@style/Theme.IAGORAWingman">
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.receive_order.ReceiveOrderActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.album_camera.AlbumsCameraActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.pasar.add_product.AddProductActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.pasar.list_product_pasar.ListProductPasarActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.pasar.list_pasar.ListPasarActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.chat.ChatActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.process_order.features.main_features.ProcessOrderActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.auth.splash_screen.SplashScreenActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.auth.login.LoginActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:screenOrientation="sensorPortrait"
            android:name="com.iagora.wingman.app.ui.main_menu.MainActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity" />

        <!-- Cloud Messaging Service -->
        <service
            android:name="com.iagora.wingman.app.services.FirebaseNotificationService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_close" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/redPrimary" />
        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="true" />


        <!-- Tracking Service -->
        <service
            android:name="com.iagora.wingman.app.services.TrackingService"
            android:foregroundServiceType="location" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>