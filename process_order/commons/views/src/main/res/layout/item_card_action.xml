<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_rounded_20"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView2"
        style="@style/TextViewSemiBold.OpenSans_15sp_020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="@string/text_warning_order"
        app:drawableStartCompat="@drawable/ic_warning_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelOrder"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/open_sans_semibold"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/text_btn_cancel_order"
        android:textAllCaps="false"
        android:textColor="@color/redPrimary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:strokeColor="@color/redPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAcceptOrder"
        style="@style/TextViewSemiBold.OpenSans_18sp_020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/text_btn_accept_order"
        android:textAllCaps="false"
        android:textColor="#F5F5F5"
        app:cornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCancelOrder"
        tools:layout_editor_absoluteX="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>