<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    tools:background="@color/black">

    <ImageButton
        android:id="@+id/btnCloseGallery"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/all_padding"
        android:background="@drawable/ripple_img_btn_grey_48dp"
        android:contentDescription="@string/desc_close"
        android:src="@drawable/ic_arrow_left_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvToolbar"
        style="@style/TextViewBold.OpenSans_16sp_020202"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="start|center"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btnCloseGallery"
        app:layout_constraintEnd_toStartOf="@+id/btnSelectGallery"
        app:layout_constraintStart_toEndOf="@+id/btnCloseGallery"
        app:layout_constraintTop_toTopOf="@+id/btnCloseGallery"
        tools:text="Select 3 Image"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnSelectGallery"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/all_padding"
        android:background="@drawable/ripple_img_btn_grey_48dp"
        android:contentDescription="@string/text_next"
        android:padding="@dimen/all_padding"
        android:src="@drawable/ic_selected"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>